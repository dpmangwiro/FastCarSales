@inherits LayoutComponentBase



<div class="page">
	<div class="sidebar" hidden="hidden">
		<NavMenu />
	</div>

	<main>
		<div class="top-row px-4 d-flex justify-content-between align-items-center">
			<div style="font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-size: 24px; font-weight: bold; color: #007BFF; text-align: center;">
				Fast Car Sales
			</div>

			<TopNavMenu/>
		</div>

		<article class="content px-4" >
			@Body
		</article>		
		
		@* <div style="height:1.0rem;">
		</div> *@

		<footer class="border-top footer text-muted" >

			@* <div class="">
				<FastCarSalesFooter></FastCarSalesFooter>
			</div> *@
			@* <div class="container">
				&copy; @DateTime.UtcNow.Year - Fast Car Sales - <a href="/" asp-action="Privacy">Privacy</a>
			</div> *@
		</footer>

	</main>
</div>
	

<div id="blazor-error-ui">
	An unhandled error has occurred.
	<a href="" class="reload">Reload</a>
	<a class="dismiss">🗙</a>
</div>

<style>
	.inner-element {
		position: relative;
		min-height: 100vh;
	}

	/* Hide the outer scrollbar */
	body {
		overflow: hidden; /* This hides both the horizontal and vertical scrollbars */
		
	}

	/* Keep the inner scrollbar visible */
	.inner-element {
		overflow-y: auto; /* This keeps the vertical scrollbar visible */
		overflow-x: hidden; /* This hides the horizontal scrollbar */
	}

		/* Hide scrollbar for WebKit browsers (Chrome, Safari, Opera) */
		.inner-element::-webkit-scrollbar {
			display: none;
		}

	/* Hide scrollbar for IE, Edge, and Firefox */
	.inner-element {
		-ms-overflow-style: none; /* IE and Edge */
		scrollbar-width: none; /* Firefox */
	}

	.bottom-row {
		position: absolute;
		bottom: 0;
		width: 100%;
		height: 2.50rem; /* Footer height */
		margin-top: 5px;
	}
</style>

