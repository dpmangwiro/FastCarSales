@inherits LayoutComponentBase


<div class="page">
	<div class="sidebar" hidden="hidden">
		<NavMenu />
	</div>

	<main class="mainholder">
		<div class="top-row px-4 d-flex justify-content-between align-items-center">
			<div style="font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-size: 24px; font-weight: bold; color: #007BFF; text-align: center;">
				Fast Car Sales
			</div>

			<TopNavMenu/>
		</div>

		<article class="content px-4 mb-3 articled" >
			@Body			
		</article>		

		<div class="footer border-top text-muted container-fluid">
			<div style="height:1.0rem;">
			</div>
			<div>
				<FastCarSalesFooter></FastCarSalesFooter>
			</div>
			<div>
				&copy; @DateTime.UtcNow.Year - Fast Car Sales - <a href="/" asp-action="Privacy">Privacy</a>
			</div>
		</div>
		
	</main>
	
	
</div>

	

<div id="blazor-error-ui">
	An unhandled error has occurred.
	<a href="" class="reload">Reload</a>
	<a class="dismiss">🗙</a>
</div>

<style>
	.mainholder{
		min-height:100vh;
		top:0;
	}

	.articled{		
		min-height:100%;
		top:0;
	}
	
	body {
		height: 100vh;
		width:100%;
		position: fixed;
		top: 0;
	} 
	
	.footer{
		position:static;
		bottom:0;
		width:100%;
	}
	
</style>

